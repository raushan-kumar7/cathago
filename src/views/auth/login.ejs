<% layout('layouts/boilerplate') %>
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-900/90 to-teal-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl w-full bg-white rounded-2xl shadow-2xl overflow-hidden flex">
    <!-- Illustration Side -->
    <div class="w-1/2 bg-gradient-to-br from-blue-500 to-indigo-700 flex items-center justify-center p-12">
      <div class="text-center">
        <h2 class="text-3xl font-extrabold text-white mb-4">DocScan</h2>
        <p class="text-white/80 text-sm">DocScan is a document scanner that analyzes and matches documents, providing a similarity score.</p>
        <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto mb-8 w-64 h-64" viewBox="0 0 100 100">
          <defs>
            <linearGradient id="scannerGradient" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:white;stop-opacity:0.3"/>
              <stop offset="100%" style="stop-color:white;stop-opacity:0.1"/>
            </linearGradient>
          </defs>
          
          <!-- Paper Scanning Illustration -->
          <g fill="url(#scannerGradient)">
            <!-- Scanner Base -->
            <rect x="20" y="70" width="60" height="10" rx="2" ry="2"/>
            
            <!-- Scanner Body -->
            <rect x="25" y="30" width="50" height="40" rx="3" ry="3"/>
            
            <!-- Paper being Scanned -->
            <path d="M35 45 L65 45 C67 45, 68 46, 68 48 L68 55 C68 57, 67 58, 65 58 L35 58 C33 58, 32 57, 32 55 L32 48 C32 46, 33 45, 35 45 Z" />
            
            <!-- Scanning Light Effect -->
            <rect x="32" y="47" width="36" height="2" fill="white" opacity="0.5">
              <animate 
                attributeName="y" 
                values="47;53;47" 
                dur="2s" 
                repeatCount="indefinite"
              />
            </rect>
          </g>
        </svg>
      </div>
    </div>

    <!-- Login Form Side -->
    <div class="w-1/2 bg-white p-12">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Welcome Back</h1>
        <p class="text-gray-600 mt-2">Sign in to access your account</p>
      </div>
      <% if (error && error.length > 0) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
          <p><%= error %></p>
        </div>
      <% } %>
      <% if (success && success.length > 0) { %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
          <p><%= success %></p>
        </div>
      <% } %>
      <form action="/auth/login" method="POST" class="space-y-6">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <div class="mt-1">
            <input id="email" name="email" type="email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="your@email.com">
          </div>
        </div>
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <div class="mt-1">
            <input id="password" name="password" type="password" required class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="••••••••">
          </div>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <input id="remember_me" name="remember_me" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
            <label for="remember_me" class="ml-2 block text-sm text-gray-700">Remember me</label>
          </div>
          <div class="text-sm">
            <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Forgot your password?</a>
          </div>
        </div>
        <div>
          <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Sign in
          </button>
        </div>
      </form>
      <div class="px-6 py-4 text-center mt-6">
        <p class="text-sm text-center text-gray-600">
          Don't have an account?
          <a href="/auth/register" class="font-medium text-indigo-600 hover:text-indigo-500">
            Register now
          </a>
        </p>
      </div>
    </div>
  </div>
</div>