 <% layout('layouts/boilerplate') %>
<div class="min-h-screen flex flex-col">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-500 to-indigo-700 text-white">
    <div class="container mx-auto px-4 py-16 md:py-24">
